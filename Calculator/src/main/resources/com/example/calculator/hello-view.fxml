<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox
  xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.example.calculator.HelloController">

  <stylesheets>
    <URL value="@style.css"/>
  </stylesheets>

  <Label fx:id="display" id="display"/>

  <HBox>
    <Button text="C" onAction="#pressButton"/>
    <Button text="+/-" onAction="#pressButton"/>
    <Button text="\%" onAction="#pressButton"/>
    <Button text="/" styleClass="op" onAction="#pressButton"/>
  </HBox>

  <HBox>
    <Button text="7" onAction="#pressButton"/>
    <Button text="8" onAction="#pressButton"/>
    <Button text="9" onAction="#pressButton"/>
    <Button text="X" styleClass="op" onAction="#pressButton"/>
  </HBox>

  <HBox>
    <Button text="4" onAction="#pressButton"/>
    <Button text="5" onAction="#pressButton"/>
    <Button text="6" onAction="#pressButton"/>
    <Button text="-" styleClass="op" onAction="#pressButton"/>
  </HBox>

  <HBox>
    <Button text="1" onAction="#pressButton"/>
    <Button text="2" onAction="#pressButton"/>
    <Button text="3" onAction="#pressButton"/>
    <Button text="+" styleClass="op" onAction="#pressButton"/>
  </HBox>

  <HBox>
    <Button text="0" styleClass="zero" onAction="#pressButton"/>
    <Button text="=" onAction="#pressButton"/>
  </HBox>

</VBox>
